<h1>Theater Database</h1>


<p><%= link_to "Add a New Theater", new_theater_url %></p>

<table>
  <thead>
    <tr>
      <th>ID Number</th>
      <th>Name</th>
      <th>Address</th>
      <th>Phone number</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @theaters.each do |theater| %>
      <tr>
        <td><%= theater.id %></td>
        <td><%= link_to theater.name, theater %></td>
        <td><%= theater.address %></td>
        <td><%= theater.phoneNumber %></td>
        <td>
             <%= link_to "Edit", edit_theater_url(theater.id) %> 
             <%= link_to "Delete", theater, :method => :delete %>
      </tr>
    <% end %>
  </tbody>
</table>